{% extends 'base.html.twig' %}

{% block title %}Catégorie
    {{ category.id }}
{% endblock %}

{% block body %}
    <h3>
        <strong>Détail de la catégorie</strong>
    </h3>

    <div class="row col-6">
        <table class="table table-active">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                </tr>
            </thead>
            <tbody>
                <tr>

                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('category_index') }}"><strong>Revenir à la liste</strong></a>
    {% if is_granted('ROLE_ADMIN') %}
        |
        <a href="{{ path('category_edit', {'id': category.id}) }}"><strong>Modifier</strong></a>

        {{ include('category/_delete_form.html.twig') }}
    {% endif %}
    {% include 'footer.html.twig' %}
{% endblock %}
