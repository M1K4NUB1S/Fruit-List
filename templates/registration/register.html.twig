{% extends 'base.html.twig' %}

{% block title %}Création de compte
{% endblock %}

{% block body %}
    <div class="col-4">
        <h3>Créer un compte</h3>


        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.surname, { 'label': 'Nom' }) }}
        {{ form_row(registrationForm.firstname, { 'label': 'Prénom' }) }}
        {{ form_row(registrationForm.email, { 'label': 'Email' }) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.agreeTerms) }}


        <button type="submit" class="btn btn-success">{{ button_label|default('Confirmer') }}</button>
        {{ form_end(registrationForm) }}
    </div>
    {% include 'footer.html.twig' %}
{% endblock %}
