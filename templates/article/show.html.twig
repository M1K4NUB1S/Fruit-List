{% extends 'base.html.twig' %}

{% block title %}Article
    {{ article.id }}
{% endblock %}

{% block body %}
    <h3>
        <strong>Détail de l'article</strong>
    </h3>

    <div class="row col-6">
        <table class="table table-active">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Libellé</th>
                    <th>Catégorie</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.libelle }}</td>
                    <td>{{ article.getCategory.getName }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('article_index') }}"><strong>Revenir à la liste</strong></a>
    {% if is_granted('ROLE_ADMIN') %}
        |
        <a href="{{ path('article_edit', {'id': article.id}) }}"><strong>Modifier</strong></a>
        {{ include('article/_delete_form.html.twig') }}
    {% endif %}
    {% include 'footer.html.twig' %}
{% endblock %}
